<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/harlequin" />

            <corners android:radius="40dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#161619"
                android:endColor="#161619"
                android:angle="90" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</layer-list>