<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/emperor</item>
    </style>

    <style name="ButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PrimaryButton" parent="ButtonBase">
        <item name="android:background">@drawable/background_button_round</item>
        <item name="android:layout_width">240dp</item>
    </style>

    <style name="PrimaryButtonBlack" parent="ButtonBase">
        <item name="android:background">@drawable/background_button_round_black</item>
        <item name="android:layout_width">240dp</item>
    </style>

    <style name="IconButton" parent="IconButtonBase">
        <item name="android:background">@drawable/background_transparent</item>
    </style>

    <style name="OutlinedIconButton" parent="IconButtonBase">
        <item name="android:background">@drawable/background_button_outlined_icon</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="IconButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Theme.TruthOrAction.Launcher">
        <item name="android:windowBackground">@drawable/background_screen_start</item>
    </style>
</resources>
